{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./",
        "emitDeclarationOnly": true,
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "incremental": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "exclude": [
        "**/build/**",
        "**/tswow/wotlkdata/**"
    ]
}